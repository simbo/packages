{
  "name": "simbos-packages",
  "description": "A monorepo for my packages.",
  "version": "0.0.0",
  "private": true,
  "author": "Simon Lepel <simbo@simbo.de> (http://simbo.de)",
  "license": "MIT",
  "homepage": "http://github.com/simbo/packages",
  "bugs": "http://github.com/simbo/packages/issues",
  "repository": "github:simbo/packages",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:docs": "typedoc && cp ./typedoc-index.md ./docs/README.md",
    "check": "pnpm run check:format && pnpm run check:types && pnpm run check:boundaries && pnpm run check:spelling",
    "check:boundaries": "turbo boundaries",
    "check:eslint": "eslint --config ./eslint.config.ts --max-warnings 0",
    "check:format": "pnpm run x:prettier --check .",
    "check:spelling": "pnpm run x:cspell",
    "check:types": "tsc --noEmit",
    "clean": "pnpm run clean:coverage && pnpm run clean:dist && pnpm run clean:turbo && pnpm run clean:node_modules",
    "clean:coverage": "rm -rf packages/*/coverage coverage",
    "clean:dist": "rm -rf packages/*/dist",
    "clean:node_modules": "rm -rf packages/*/node_modules node_modules",
    "clean:turbo": "rm -rf packages/*/.turbo .turbo",
    "fix:eslint": "pnpm run check:eslint --fix",
    "fix:format": "pnpm run x:prettier --write .",
    "preflight": "pnpm install --frozen-lockfile && pnpm run build && pnpm run check && pnpm run test && pnpm run build:docs",
    "prepare": "husky",
    "serve:docs": "npx --yes http-server -c-1 ./docs",
    "serve:coverage": "npx --yes http-server -c-1 ./coverage",
    "test": "vitest run --coverage",
    "test:ui": "pnpm run test:watch --ui",
    "test:watch": "vitest dev --coverage",
    "x:cspell": "turbo run build --filter=@simbo/cspell-config && cspell",
    "x:prettier": "turbo run build --filter=@simbo/prettier-config && prettier"
  },
  "devDependencies": {
    "@changesets/cli": "catalog:root",
    "@commitlint/cli": "catalog:root",
    "@ianvs/prettier-plugin-sort-imports": "catalog:packages",
    "@simbo/commitlint-config": "workspace:*",
    "@simbo/cspell-config": "workspace:*",
    "@simbo/eslint-config": "workspace:*",
    "@simbo/prettier-config": "workspace:*",
    "@simbo/tsconfig": "workspace:*",
    "@types/node": "catalog:core",
    "@vitest/coverage-v8": "catalog:core",
    "@vitest/ui": "catalog:core",
    "cspell": "catalog:root",
    "eslint": "catalog:core",
    "husky": "catalog:root",
    "jiti": "catalog:core",
    "prettier": "catalog:packages",
    "prettier-plugin-organize-attributes": "catalog:packages",
    "turbo": "catalog:root",
    "typedoc": "catalog:root",
    "typedoc-github-theme": "catalog:root",
    "typedoc-plugin-mdn-links": "catalog:root",
    "typescript": "catalog:core",
    "vitest": "catalog:core"
  }
}
