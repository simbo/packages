{
  "name": "simbos-configs",
  "description": "A monorepo for shared configurations.",
  "version": "0.0.0",
  "private": true,
  "author": "Simon Lepel <simbo@simbo.de> (http://simbo.de)",
  "license": "MIT",
  "homepage": "http://github.com/simbo/simbos-configs",
  "repository": "github:simbo/simbos-configs",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:docs": "typedoc",
    "check": "pnpm run check:format && pnpm run check:types && pnpm run check:boundaries && pnpm run check:spelling",
    "check:boundaries": "turbo boundaries",
    "check:format": "pnpm run x:prettier --check .",
    "check:spelling": "pnpm run x:cspell",
    "check:types": "tsc --noEmit",
    "clean": "pnpm run clean:turbo && pnpm run clean:node_modules",
    "clean:node_modules": "rm -rf packages/*/node_modules node_modules",
    "clean:turbo": "rm -rf packages/*/.turbo .turbo",
    "fix:format": "pnpm run x:prettier --write .",
    "preflight": "pnpm install --frozen-lockfile && pnpm run build && pnpm run check && pnpm run build:docs",
    "prepare": "husky",
    "serve:docs": "npx --yes http-server -c-1 ./docs",
    "x:cspell": "turbo run build --filter=@simbo/cspell-config && cspell",
    "x:prettier": "turbo run build --filter=@simbo/prettier-config && prettier"
  },
  "devDependencies": {
    "@changesets/cli": "catalog:root",
    "@commitlint/cli": "catalog:root",
    "@ianvs/prettier-plugin-sort-imports": "catalog:shared",
    "@simbo/commitlint-config": "workspace:*",
    "@simbo/cspell-config": "workspace:*",
    "@simbo/prettier-config": "workspace:*",
    "@simbo/tsconfig": "workspace:*",
    "@types/node": "catalog:common",
    "cspell": "catalog:root",
    "husky": "catalog:root",
    "jiti": "catalog:shared",
    "prettier": "catalog:shared",
    "prettier-plugin-organize-attributes": "catalog:shared",
    "turbo": "catalog:root",
    "typedoc": "catalog:root",
    "typedoc-github-theme": "catalog:root",
    "typedoc-plugin-mdn-links": "catalog:root",
    "typescript": "catalog:common"
  }
}
