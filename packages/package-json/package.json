{
  "name": "@simbo/package-json",
  "description": "A set of utilities for working with package.json files.",
  "version": "0.1.3",
  "keywords": [
    "package.json",
    "npm",
    "metadata",
    "json",
    "read",
    "write",
    "parse",
    "utility",
    "node",
    "typescript"
  ],
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de/)",
  "license": "MIT",
  "homepage": "http://github.com/simbo/packages/tree/main/packages/package-json",
  "repository": "github:simbo/packages",
  "bugs": "https://github.com/simbo/packages/issues",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "exports": {
    ".": "./dist/read-package-json.js"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check:eslint": "eslint --config ./eslint.config.ts --max-warnings 0",
    "check:format": "prettier --check .",
    "check:types": "tsc --noEmit",
    "clean:dist": "rm -rf dist",
    "fix:eslint": "pnpm run check:eslint --fix",
    "fix:format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:ui": "pnpm run test:watch --ui",
    "test:watch": "vitest dev --coverage"
  },
  "dependencies": {
    "@simbo/stringify-error": "workspace:*",
    "type-fest": "^5.0.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@simbo/eslint-config": "workspace:*",
    "@simbo/prettier-config": "workspace:*",
    "@simbo/tsconfig": "workspace:*",
    "@types/node": "^20.19.18",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
