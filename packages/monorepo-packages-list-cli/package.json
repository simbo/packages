{
  "name": "@simbo/monorepo-packages-list-cli",
  "description": "A CLI that generates a list of a monorepo's packages details and injects it into a markdown file.",
  "version": "1.0.2",
  "keywords": [
    "monorepo",
    "packages",
    "list",
    "workspace",
    "metadata",
    "generate",
    "markdown",
    "docs",
    "catalog",
    "repository",
    "utility",
    "typescript",
    "cli"
  ],
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de/)",
  "license": "MIT",
  "homepage": "http://github.com/simbo/packages/tree/main/packages/monorepo-packages-list-cli",
  "repository": "github:simbo/packages",
  "bugs": "https://github.com/simbo/packages/issues",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "monorepo-packages-list": "dist/cli.js"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && chmod +x dist/cli.js",
    "check:eslint": "eslint --config ./eslint.config.ts --max-warnings 0",
    "check:format": "prettier --check .",
    "check:types": "tsc --noEmit",
    "clean:dist": "rm -rf dist",
    "fix:eslint": "pnpm run check:eslint --fix",
    "fix:format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:ui": "pnpm run test:watch --ui",
    "test:watch": "vitest dev --coverage"
  },
  "dependencies": {
    "@simbo/accessible": "workspace:*",
    "@simbo/call-prettier": "workspace:*",
    "@simbo/cli-output": "workspace:*",
    "@simbo/clirk": "workspace:*",
    "@simbo/find-git-repository-root": "workspace:*",
    "@simbo/inject-between-html-comments": "workspace:*",
    "@simbo/monorepo-packages-list": "workspace:*",
    "@simbo/monorepo-utils": "workspace:*",
    "@simbo/user-facing-error": "workspace:*",
    "@simbo/zodpak": "workspace:*",
    "cosmiconfig": "catalog:",
    "cosmiconfig-typescript-loader": "catalog:",
    "yoctocolors": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "@simbo/eslint-config": "workspace:*",
    "@simbo/prettier-config": "workspace:*",
    "@simbo/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "jiti": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-organize-attributes": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
