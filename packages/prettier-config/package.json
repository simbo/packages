{
  "name": "@simbo/prettier-config",
  "description": "Simbo's shared Prettier configuration.",
  "version": "2.0.0",
  "keywords": [
    "prettier",
    "config",
    "configuration",
    "formatter",
    "style",
    "code-style",
    "lint",
    "rules",
    "shared",
    "preset"
  ],
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de/)",
  "license": "MIT",
  "homepage": "http://github.com/simbo/packages/tree/main/packages/prettier-config",
  "repository": "github:simbo/packages",
  "bugs": "https://github.com/simbo/packages/issues",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check": "pnpm run check:types",
    "check:types": "tsc --noEmit",
    "clean": "pnpm run clean:dist && pnpm run clean:coverage && pnpm run clean:turbo && pnpm run clean:node_modules",
    "clean:dist": "rm -rf dist",
    "clean:node_modules": "rm -rf node_modules",
    "clean:turbo": "rm -rf .turbo",
    "clean:coverage": "rm -rf coverage",
    "test": "vitest run --coverage",
    "test:ui": "pnpm run test:watch --ui",
    "test:watch": "vitest dev --coverage"
  },
  "peerDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4",
    "prettier": "^3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@simbo/tsconfig": "workspace:*",
    "@types/node": "^24.10.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "baseline-browser-mapping": "^2.9.8",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
