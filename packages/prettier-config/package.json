    "test": "vitest run --coverage",
    "test:ui": "pnpm run test:watch --ui",
    "test:watch": "vitest dev --coverage"
  },
  "peerDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4",
    "prettier": "^3",
    "prettier-plugin-organize-attributes": "^1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "@simbo/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "jiti": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-organize-attributes": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
