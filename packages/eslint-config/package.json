{
  "name": "@simbo/eslint-config",
  "description": "Shared ESLint configurations for different environments and technology stacks with utilities for configuration customization.",
  "version": "2.0.2",
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "lint",
    "linter",
    "code-style",
    "style-guide",
    "flat-config",
    "typescript",
    "typescript-eslint",
    "unicorn",
    "jsdoc",
    "node",
    "browser",
    "prettier",
    "testing"
  ],
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de/)",
  "license": "MIT",
  "homepage": "http://github.com/simbo/packages/tree/main/packages/eslint-config",
  "repository": "github:simbo/packages",
  "bugs": "https://github.com/simbo/packages/issues",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./utils": "./dist/utils/index.js",
    "./eslint-js": "./dist/configs/eslint-js-configs.js",
    "./jsdoc": "./dist/configs/jsdoc-configs.js",
    "./n": "./dist/configs/n-configs.js",
    "./prettier": "./dist/configs/prettier-configs.js",
    "./testing": "./dist/configs/testing-configs.js",
    "./typescript-eslint": "./dist/configs/typescript-eslint-configs.js",
    "./unicorn": "./dist/configs/unicorn-configs.js"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check": "pnpm run check:eslint && pnpm run check:format && pnpm run check:types",
    "check:eslint": "eslint --config ./eslint.config.ts --max-warnings 0",
    "check:format": "prettier --check .",
    "check:types": "tsc --noEmit",
    "clean": "pnpm run clean:dist && pnpm run clean:coverage && pnpm run clean:turbo && pnpm run clean:node_modules",
    "clean:dist": "rm -rf dist",
    "clean:node_modules": "rm -rf node_modules",
    "clean:turbo": "rm -rf .turbo",
    "clean:coverage": "rm -rf coverage",
    "fix:eslint": "pnpm run check:eslint --fix",
    "fix:format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:ui": "pnpm run test:watch --ui",
    "test:watch": "vitest dev --coverage"
  },
  "peerDependencies": {
    "eslint": "^9"
  },
  "dependencies": {
    "@eslint/config-helpers": "^0.4.0",
    "@eslint/js": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.1.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.46.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.3.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@simbo/prettier-config": "workspace:*",
    "@simbo/tsconfig": "workspace:*",
    "@types/node": "^24.10.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "baseline-browser-mapping": "^2.9.7",
    "eslint": "^9.37.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
