{
  "name": "@simbo/monorepo-utils",
  "description": "A set of utilities for inspecting and working with monorepo workspaces.",
  "version": "1.0.2",
  "keywords": [
    "monorepo",
    "workspace",
    "utilities",
    "packages",
    "metadata",
    "paths",
    "resolve",
    "read",
    "analyze",
    "tools",
    "pnpm",
    "typescript"
  ],
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de/)",
  "license": "MIT",
  "homepage": "http://github.com/simbo/packages/tree/main/packages/monorepo-utils",
  "repository": "github:simbo/packages",
  "bugs": "https://github.com/simbo/packages/issues",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check:eslint": "eslint --config ./eslint.config.ts --max-warnings 0",
    "check:format": "prettier --check .",
    "check:types": "tsc --noEmit",
    "clean:dist": "rm -rf dist",
    "fix:eslint": "pnpm run check:eslint --fix",
    "fix:format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:ui": "pnpm run test:watch --ui",
    "test:watch": "vitest dev --coverage"
  },
  "dependencies": {
    "@simbo/accessible": "workspace:*",
    "@simbo/package-json": "workspace:*",
    "@simbo/stringify-error": "workspace:*",
    "globby": "catalog:",
    "p-queue": "catalog:",
    "type-fest": "catalog:",
    "yaml": "catalog:"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "@simbo/eslint-config": "workspace:*",
    "@simbo/prettier-config": "workspace:*",
    "@simbo/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "jiti": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-organize-attributes": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
