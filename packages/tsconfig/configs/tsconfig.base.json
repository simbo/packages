{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "moduleDetection": "force",
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "newLine": "lf",
    "jsx": "react",

    // ESM doesn't yet support JSON modules.
    "resolveJsonModule": false,

    // To provide backwards compatibility, Node.js allows you to import most
    // CommonJS packages with a default import. This flag tells TypeScript that
    // it's okay to use import on CommonJS modules.
    "allowSyntheticDefaultImports": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "strict": true,

    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true
  }
}
