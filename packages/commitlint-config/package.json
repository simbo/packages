{
  "name": "@simbo/commitlint-config",
  "description": "Simbo's shared commitlint configuration based on the conventional commits standard.",
  "version": "1.0.0",
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de/)",
  "license": "MIT",
  "homepage": "http://github.com/simbo/simbos-configs/tree/main/packages/commitlint-config",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check:types": "tsc --noEmit"
  },
  "peerDependencies": {
    "@commitlint/cli": "^19"
  },
  "dependencies": {
    "@commitlint/config-conventional": "catalog:shared"
  },
  "devDependencies": {
    "@commitlint/lint": "catalog:shared",
    "@commitlint/load": "catalog:shared",
    "@commitlint/types": "catalog:shared",
    "@simbo/tsconfig": "workspace:*",
    "@types/node": "catalog:common",
    "typescript": "catalog:common"
  }
}
