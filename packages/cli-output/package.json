{
  "name": "@simbo/cli-output",
  "description": "A collection of utilities for common CLI messages and output.",
  "version": "1.0.0",
  "keywords": [
    "cli",
    "console",
    "output",
    "message",
    "success",
    "failure",
    "line",
    "hint",
    "terminated",
    "utility",
    "colors",
    "formatting",
    "logging",
    "print",
    "typescript"
  ],
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de/)",
  "license": "MIT",
  "homepage": "http://github.com/simbo/packages/tree/main/packages/cli-output",
  "repository": "github:simbo/packages",
  "bugs": "https://github.com/simbo/packages/issues",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "exports": {
    "./failure": "./dist/failure.js",
    "./success": "./dist/success.js",
    "./line": "./dist/line.js",
    "./hint-to-help": "./dist/hint-to-help.js",
    "./terminated": "./dist/terminated.js"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check:eslint": "eslint --config ./eslint.config.ts --max-warnings 0",
    "check:format": "prettier --check .",
    "check:types": "tsc --noEmit",
    "clean:dist": "rm -rf dist",
    "fix:eslint": "pnpm run check:eslint --fix",
    "fix:format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:ui": "pnpm run test:watch --ui",
    "test:watch": "vitest dev --coverage"
  },
  "dependencies": {
    "yoctocolors": "catalog:packages"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:core",
    "@simbo/eslint-config": "workspace:*",
    "@simbo/prettier-config": "workspace:*",
    "@simbo/tsconfig": "workspace:*",
    "@types/node": "catalog:core",
    "@vitest/coverage-v8": "catalog:core",
    "@vitest/ui": "catalog:core",
    "eslint": "catalog:core",
    "jiti": "catalog:core",
    "prettier": "catalog:core",
    "prettier-plugin-organize-attributes": "catalog:core",
    "typescript": "catalog:core",
    "vitest": "catalog:core"
  }
}
